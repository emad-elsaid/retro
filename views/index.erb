<section class="section">
  <div class="container">

    <form action="/boards/<%= board[:id] %>" method="POST">

      <div class="field">
        <label class="label" for="name">Retro name</label>
        <div class="control is-fullwidth">
          <input class="input" type="text" placeholder="Retro name..." name="name" id="name" value="<%=h board[:name] %>" autofocus>
        </div>
      </div>

      <div class="field is-fullwidth">
        <label class="label" for="allowed_votes">Allowed votes</label>
        <div class="control is-expanded">
          <input class="input" type="number" name="allowed_votes" id="allowed_votes" value="<%=h board[:allowed_votes] %>" />
        </div>
      </div>

      <div class="field is-fullwidth">
        <label class="label" for="columns">Hide votes numbers</label>
        <label class="checkbox" for="hide_votes">
          <input type="checkbox" name="hide_votes" id="hide_votes" <%= 'checked' if board[:hide_votes] %>> Hide votes numbers to reduce bias while casting votes
        </label>
      </div>


      <div class="field">
        <label class="label" for="countdown">Count down</label>
        <div class="field has-addons is-fullwidth">
          <p class="control has-addons is-expanded">
            <input class="input" type="number" name="countdown" id="countdown" value="0" />
          </p>
          <p class="control">
            <a class="button is-static"> Minutes </a>
          </p>
        </div>
      </div>

      <div class="field">
        <label class="label" for="columns">Columns</label>
        <div class="control">
          <textarea class="textarea" placeholder="Each line a column..." name="columns" id="columns"><%=h board[:columns].join("\n") %></textarea>
        </div>
      </div>

      <div class="field">
        <label class="label" for="order">Order of cards</label>
        <div class="select">
          <select name="order" id="order">
            <option value="creation" <%='selected' if board[:order] == 'creation' %>>Order of creation</option>
            <option value="votes" <%='selected' if board[:order] == 'votes' %>>Most voted</option>
          </select>
        </div>
      </div>


      <div class="field is-fullwidth">
        <label class="label" for="columns">Hide cards</label>
        <label class="checkbox" for="hide_cards">
          <input type="checkbox" name="hide_cards" id="hide_cards" <%= 'checked' if board[:hide_cards] %>> Hide cards other people created
        </label>
      </div>

      <div class="field is-fullwidth">
        <label class="label" for="columns">Hide users names</label>
        <label class="checkbox" for="hide_users">
          <input type="checkbox" name="hide_users" id="hide_users" <%= 'checked' if board[:hide_users] %>> Hide users names from cards
        </label>
      </div>

      <div class="field">
        <div class="control">
          <button class="button is-link" type="submit">Create</button>
        </div>
      </div>

    </form>

  </div>
</section>
